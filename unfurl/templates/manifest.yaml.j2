apiVersion: unfurl/v1alpha1
kind: Ensemble
# merge in {{ensembleTemplate}} from spec repo
+include:
  file: {{ensembleTemplate}}
  repository: spec
spec:
  service_template:
    repositories:
      spec:
        url: file:{{ specRepoPath }}
        metadata:
          initial-commit: {{ specInitialCommit }}
      self:
        url: file:{{ instanceRepoPath }}
        metadata:
          initial-commit: {{ instanceInitialCommit }}
